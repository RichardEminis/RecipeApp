<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvCategoryItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/main_half"
    android:layout_marginTop="@dimen/main_indent"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/main_half">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivCategoryImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height"
            android:contentDescription="@string/category_image_description"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/tvCategoryName"
            style="@style/CardStyle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/category_name" />

        <TextView
            android:id="@+id/tvCategoryDescription"
            style="@style/CardStyle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/description" />
    </LinearLayout>

</androidx.cardview.widget.CardView>