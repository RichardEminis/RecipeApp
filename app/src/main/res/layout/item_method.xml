<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvMethodItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/ingredients_text_indent"
    android:layout_marginTop="@dimen/ingredients_text_indent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvMethodText"
        style="@style/MethodTextStyle"
        tools:text="Бургер с грибами и сыром"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

</LinearLayout>