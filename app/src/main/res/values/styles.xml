<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_alternates_semi_bold</item>
        <item name="android:textFontWeight">600</item>
        <item name="android:textAllCaps">true</item>
        <item name="cornerRadius">@dimen/main_half</item>
    </style>

    <style name="StyleNavButton" parent="StyleTitle14">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="android:paddingVertical">@dimen/padding_bottom</item>
        <item name="android:paddingHorizontal">@dimen/padding_bottom</item>
    </style>

    <style name="StyleCategory" parent="StyleTitle14">
        <item name="android:textColor">@color/category_color</item>
        <item name="android:textSize">@dimen/text_category_size</item>
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="android:paddingVertical">@dimen/padding_bottom</item>
        <item name="android:paddingHorizontal">@dimen/padding_bottom</item>
    </style>

    <style name="RecipeStyle" parent="StyleTitle14">
        <item name="android:textColor">@color/category_color</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="android:paddingVertical">@dimen/main_half</item>
        <item name="android:paddingHorizontal">@dimen/main_half</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="CategoryStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:paddingBottom">@dimen/padding_bottom</item>
        <item name="android:paddingHorizontal">@dimen/main_half</item>
        <item name="android:textColor">@color/card_text_opacity</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="RecipePortion" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:paddingBottom">@dimen/padding_bottom</item>
        <item name="android:paddingHorizontal">@dimen/main_half</item>
        <item name="android:textColor">@color/card_text_opacity</item>
    </style>

    <style name="IngredientsTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textFontWeight">175</item>
        <item name="android:paddingBottom">@dimen/main_half</item>
        <item name="android:textColor">@color/card_text_opacity</item>
        <item name="android:background">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MethodTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textFontWeight">175</item>
        <item name="android:paddingBottom">@dimen/main_half</item>
        <item name="android:textColor">@color/card_text_opacity</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="styleSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:thumb">@drawable/shape_seekbar_thumb</item>
        <item name="android:progressDrawable">@drawable/shape_seekbar_progress</item>
    </style>

</resources>